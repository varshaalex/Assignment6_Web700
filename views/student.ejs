<div class="row">
    <main class="col-md-12">
      <br />
      <h2>
        <%= viewData.student.firstName %> <%= viewData.student.lastName %> - Student:
        <%= viewData.student.studentNum %>
      </h2>
      <hr />
  
      <form method="post" action="/student/update">
        <input type="hidden" name="studentNum" value="<%= viewData.student.studentNum %>" />
  
        <!-- Personal Info -->
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input class="form-control" id="firstName" name="firstName" value="<%= viewData.student.firstName %>" required>
        </div>
  
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input class="form-control" id="lastName" name="lastName" value="<%= viewData.student.lastName %>" required>
        </div>
  
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control" id="email" name="email" value="<%= viewData.student.email %>" required>
        </div>
  
        <!-- Address -->
        <div class="form-group">
          <label for="addressStreet">Street</label>
          <input class="form-control" id="addressStreet" name="addressStreet" value="<%= viewData.student.addressStreet %>">
        </div>
  
        <div class="form-group">
          <label for="addressCity">City</label>
          <input class="form-control" id="addressCity" name="addressCity" value="<%= viewData.student.addressCity %>">
        </div>
  
        <div class="form-group">
          <label for="addressProvince">Province</label>
          <input class="form-control" id="addressProvince" name="addressProvince" value="<%= viewData.student.addressProvince %>">
        </div>
  
        <!-- Status -->
        <div class="form-group">
          <label for="status">Status</label>
          <select class="form-control" name="status" id="status">
            <option value="Full Time" <% if (viewData.student.status === "Full Time") { %> selected <% } %>>Full Time</option>
            <option value="Part Time" <% if (viewData.student.status === "Part Time") { %> selected <% } %>>Part Time</option>
          </select>
        </div>
  
        <!-- TA -->
        <div class="form-group form-check">
          <input class="form-check-input" type="checkbox" id="TA" name="TA" <% if (viewData.student.TA) { %> checked <% } %> >
          <label class="form-check-label" for="TA">Teaching Assistant</label>
        </div>
  
        <!-- Course Selection -->
        <div class="form-group">
          <label for="course">Course</label>
          <% if (viewData.courses.length > 0) { %>
          <select class="form-control" name="course" id="course">
            <option value="">Select Course</option>
            <% viewData.courses.forEach(function(course) { %>
              <option value="<%= course.courseId %>" <% if (course.selected) { %> selected <% } %> >
                <%= course.courseCode %>
              </option>
            <% }) %>
          </select>
          <% } else { %>
            <div>No Courses</div>
          <% } %>
        </div>
  
        <!-- Submit -->
        <button type="submit" class="btn btn-primary">Update Student</button>
      </form>
    </main>
  </div>
  