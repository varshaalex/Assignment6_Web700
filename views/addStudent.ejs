<div class="container mt-4">
  <h2>Add a New Student</h2>

  <form class="p-4 rounded-lg shadow-xl bg-light border border-secondary" method="POST" action="/students/add">

    <!-- Personal Information -->
    <fieldset class="mb-4">
      <legend>Personal Information</legend>
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input class="form-control" id="firstName" name="firstName" required>
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input class="form-control" id="lastName" name="lastName" required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input class="form-control" id="email" name="email" required type="email">
      </div>
    </fieldset>

    <!-- Address -->
    <fieldset class="mb-4">
      <legend>Address</legend>
      <div class="form-group">
        <label for="addressStreet">Street</label>
        <input class="form-control" id="addressStreet" name="addressStreet">
      </div>
      <div class="form-group">
        <label for="addressCity">City</label>
        <input class="form-control" id="addressCity" name="addressCity">
      </div>
      <div class="form-group">
        <label for="addressProvince">Province</label>
        <input class="form-control" id="addressProvince" name="addressProvince">
      </div>
    </fieldset>

    <!-- Status and TA -->
    <fieldset class="mb-4">
      <legend>Academic</legend>
      <div class="form-group">
        <label for="status">Status</label>
        <select class="form-control" id="status" name="status">
          <option value="Full Time">Full Time</option>
          <option value="Part Time">Part Time</option>
        </select>
      </div>
      <div class="form-group form-check">
        <input class="form-check-input" type="checkbox" id="TA" name="TA">
        <label class="form-check-label" for="TA">Teaching Assistant</label>
      </div>
    </fieldset>

    <!-- Course -->
    <fieldset class="mb-4">
      <legend>Course</legend>
      <% if (courses.length > 0) { %>
        <select class="form-control" name="course" id="course">
          <option value="">Select Course</option>
          <% courses.forEach(function(course) { %>
            <option value="<%= course.courseId %>"><%= course.courseCode %></option>
          <% }) %>
        </select>
      <% } else { %>
        <div>No Courses</div>
      <% } %>
    </fieldset>

    <!-- Submit -->
    <button type="submit" class="btn btn-primary">Add Student</button>
  </form>
</div>
