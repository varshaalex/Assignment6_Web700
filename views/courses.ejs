<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Courses</h2>
    <div>
      <a href="/courses/add" class="btn btn-success mr-2">âž• Add New Course</a>
      <a href="/students" class="btn btn-primary">ðŸ“‹ View All Students</a>
    </div>
  </div>

  <% if (courses && courses.length > 0) { %>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Course Code</th>
          <th>Course Description</th>
          <th></th> <!-- For remove button -->
        </tr>
      </thead>
      <tbody>
        <% courses.forEach(function(course) { %>
        <tr>
          <td>
            <a href="/course/<%= course.courseId %>"><%= course.courseCode %></a>
          </td>
          <td>
            <a href="/students?course=<%= course.courseId %>"><%= course.courseDescription %></a>
          </td>
          <td>
            <a href="/course/delete/<%= course.courseId %>" class="btn btn-danger">Remove</a>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <% } else { %>
    <div class="alert alert-warning">No results</div>
  <% } %>
</div>
